(* Procedure testing *)

MODULE ProcTest1;

    CONST Size = 5;
    VAR i, j : INTEGER;
        A : ARRAY Size OF INTEGER;
        B : ARRAY 3 OF INTEGER;

    (* Multiply x & y and put result in res *)
    PROCEDURE Multiply1 (x, y : INTEGER; VAR res : INTEGER);
	BEGIN
	    res := x * y;
		Write (res)
	END Multiply1;

    (* Multiply the first two elements and put result in the third element *)
    PROCEDURE Multiply2 (VAR data : ARRAY 3 OF INTEGER);
	BEGIN
	    data[2] := data[0] * data[1];
		Write (data[2])
	END Multiply2;

BEGIN

    j := 0;

    WHILE j < Size DO

        Multiply1 (j, j + 1, A[j]);
        WriteLn (A[j]);
        j := j + 1

    END;

    j := 0;

    WHILE j < Size DO

        B[0] := j;
        B[1] := j + 1;
        Multiply2 (B);
        WriteLn (B[2]);
        j := j + 1

    END

END ProcTest1.
